    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:conv="clr-namespace:StudBudgetMVP.Converters"
    x:Class="StudBudgetMVP.App">

    <Application.Resources>
        <ResourceDictionary>

            <conv:BoolToColorConverter  x:Key="BoolToColorConverter"/>
