<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudBudgetMVP.Views.RegisterPage"
             Title="Регистрация">
	<VerticalStackLayout Padding="30" Spacing="15">
		<Entry Placeholder="Логин"  Text="{Binding Username}" />
		<Entry Placeholder="Пароль" IsPassword="True" Text="{Binding Password}" />
		<Button Text="Создать аккаунт" Command="{Binding RegisterCommand}" />
		<Button Text="Назад к входу"   Command="{Binding GoLoginCommand}" />
	</VerticalStackLayout>
</ContentPage>