<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudBudgetMVP.Views.BudgetPage"
             x:Name="root"
             Title="Бюджет">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <!-- итоговые суммы + предупреждение -->
            <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" Margin="0,0,0,15">
                <Label Grid.Row="0" Grid.Column="0"
                       Text="{Binding TotalIncome,  StringFormat='+{0:C}'}"
                       TextColor="Green" FontAttributes="Bold"/>

                <Label Grid.Row="0" Grid.Column="1"
                       Text="{Binding TotalExpense, StringFormat='-{0:C}'}"
                       TextColor="Red" FontAttributes="Bold"
                       HorizontalOptions="End"/>

                <Label Grid.Row="1" Grid.ColumnSpan="2"
                       Text="Перерасход!"
                       FontAttributes="Bold"
                       TextColor="Red"
                       HorizontalOptions="Center"
                       IsVisible="{Binding HasOverspend}"/>
            </Grid>

            <!-- ===== форма добавления категории ===== -->
            <Frame BorderColor="#D0D0D0" CornerRadius="12" Padding="15">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Новая категория" FontAttributes="Bold" TextColor="Gray"/>

                    <Entry Placeholder="Название категории"
                           Text="{Binding NewCategoryName}" />

                    <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                        <HorizontalStackLayout Spacing="10">
                            <RadioButton Content="Доход"
                                         GroupName="AddType"
                                         IsChecked="{Binding NewIsIncome}" />
                            <RadioButton Content="Расход"
                                         GroupName="AddType"
                                         IsChecked="{Binding NewIsIncome, Converter={StaticResource InverseBoolConverter}}" />
                        </HorizontalStackLayout>

                        <Entry Grid.Column="1"
                               Placeholder="Лимит ₽"
                               Keyboard="Numeric"
                               Text="{Binding NewLimit}"
                               IsVisible="{Binding IsExpense}" />
                    </Grid>

                    <Button Text="Сохранить" Command="{Binding AddCommand}" />
                </VerticalStackLayout>
            </Frame>

            <!-- ===== блок табов + сортировка + список ===== -->
            <Frame BorderColor="#8A8A8A" CornerRadius="12" Padding="15" Margin="0,15,0,0">

                <VerticalStackLayout Spacing="10">

                    <!-- табы (слева) + сортировка (справа) -->
                    <Grid ColumnDefinitions="*,Auto" VerticalOptions="Center">

                        <!-- переключатель доход / расход -->
                        <HorizontalStackLayout Spacing="25">
                            <RadioButton Content="Доходы"
                                         GroupName="Tab"
                                         IsChecked="{Binding IsIncomeTab}">
                                <RadioButton.Style>
                                    <Style TargetType="RadioButton">
                                        <Setter Property="TextColor"      Value="Gray" />
                                        <Setter Property="FontAttributes" Value="None" />
                                        <Style.Triggers>
                                            <Trigger TargetType="RadioButton"
                                                     Property="IsChecked"
                                                     Value="True">
                                                <Setter Property="TextColor"      Value="Black"/>
                                                <Setter Property="FontAttributes" Value="Bold" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </RadioButton.Style>
                            </RadioButton>

                            <RadioButton Content="Расходы"
                                         GroupName="Tab"
                                         IsChecked="{Binding IsIncomeTab, Converter={StaticResource InverseBoolConverter}}">
                                <RadioButton.Style>
                                    <Style TargetType="RadioButton">
                                        <Setter Property="TextColor"      Value="Gray" />
                                        <Setter Property="FontAttributes" Value="None" />
                                        <Style.Triggers>
                                            <Trigger TargetType="RadioButton"
                                                     Property="IsChecked"
                                                     Value="True">
                                                <Setter Property="TextColor"      Value="Black"/>
                                                <Setter Property="FontAttributes" Value="Bold" />
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </RadioButton.Style>
                            </RadioButton>
                        </HorizontalStackLayout>

                        <!-- выбор режима сортировки -->
                        <Picker Grid.Column="1"
                                WidthRequest="140"
                                Title="Сортировка"
                                ItemsSource="{Binding SortModes}"
                                SelectedItem="{Binding SelectedSortMode}" />
                    </Grid>

                    <!-- чекбокс «перерасход вперёд» -->
                    <HorizontalStackLayout Spacing="6" VerticalOptions="Center">
                        <CheckBox IsChecked="{Binding OverspentFirst}" />
                        <Label Text="Показывать категории с перерасходом первыми"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>

                    <!-- ===== список доходов ===== -->
                    <Border Stroke="#8A8A8A" StrokeThickness="1"
                            HeightRequest="300"
                            IsVisible="{Binding IsIncomeTab}">
                        <CollectionView ItemsSource="{Binding IncomeCategories}"
                                        HeightRequest="300"
                                        VerticalScrollBarVisibility="Always">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame Padding="5" BorderColor="#8A8A8A" Margin="0,3">
                                        <Grid ColumnDefinitions="*,Auto">
                                            <VerticalStackLayout>
                                                <Label Text="{Binding Name}" />
                                                <Label Text="{Binding Total, StringFormat='Доход: {0:C}'}"
                                                       FontSize="Small"
                                                       TextColor="Green"/>
                                            </VerticalStackLayout>

                                            <Button Grid.Column="1"
                                                    Text="✕"
                                                    FontAttributes="Bold"
                                                    BackgroundColor="Transparent"
                                                    TextColor="DarkGray"
                                                    Padding="0"
                                                    Command="{Binding BindingContext.DeleteCategoryCommand, Source={x:Reference root}}"
                                                    CommandParameter="{Binding .}" />
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Border>

                    <!-- ===== список расходов ===== -->
                    <Border Stroke="#8A8A8A" StrokeThickness="1"
                            HeightRequest="300"
                            IsVisible="{Binding IsExpenseTab}">
                        <CollectionView ItemsSource="{Binding ExpenseCategories}"
                                        HeightRequest="300"
                                        VerticalScrollBarVisibility="Always">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Frame Padding="5" Margin="0,3">
                                        <Frame.Style>
                                            <Style TargetType="Frame">
                                                <Setter Property="BorderColor" Value="#8A8A8A"/>
                                                <Style.Triggers>
                                                    <DataTrigger TargetType="Frame"
                                                                 Binding="{Binding IsOverspent}"
                                                                 Value="True">
                                                        <Setter Property="BorderColor" Value="Red"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Frame.Style>

                                        <Grid ColumnDefinitions="*,Auto">
                                            <VerticalStackLayout>
                                                <Label Text="{Binding Name}" />
                                                <Label Text="{Binding Limit, StringFormat='Лимит: {0:C}'}"
                                                       FontSize="Small"
                                                       TextColor="DarkGray" />
                                                <Label Text="{Binding Total, StringFormat='Фактический расход: {0:C}'}"
                                                       FontSize="Small">
                                                    <Label.Style>
                                                        <Style TargetType="Label">
                                                            <Setter Property="TextColor" Value="Black"/>
                                                            <Style.Triggers>
                                                                <DataTrigger TargetType="Label"
                                                                             Binding="{Binding IsOverspent}"
                                                                             Value="True">
                                                                    <Setter Property="TextColor" Value="Red"/>
                                                                </DataTrigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Label.Style>
                                                </Label>
                                            </VerticalStackLayout>

                                            <Button Grid.Column="1"
                                                    Text="✕"
                                                    FontAttributes="Bold"
                                                    BackgroundColor="Transparent"
                                                    TextColor="DarkGray"
                                                    Padding="0"
                                                    Command="{Binding BindingContext.DeleteCategoryCommand, Source={x:Reference root}}"
                                                    CommandParameter="{Binding .}" />
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </Border>

                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>